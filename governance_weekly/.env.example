# Scraping Configuration
MAX_ARTICLES_PER_SITE=100
RATE_LIMIT_SEC=1.0
USER_AGENT=GovernanceWeeklyBot/1.0

# Translation Backend
# CRITICAL: Choose one of these options:
# 1. RECOMMENDED: gemini (Free, reliable) - Get API key from https://makersuite.google.com/app/apikey
# 2. googletrans (Free, but often fails due to blocking)
# 3. google (Best quality, but requires Google Cloud billing account)
# 4. marian (Local/offline, slower, ~300MB download)

TRANSLATION_BACKEND=gemini
GEMINI_API_KEY=

# Alternative: Google Cloud Translate (requires billing account)
# TRANSLATION_BACKEND=google
# GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# Google Drive Upload (Optional)
DRIVE_FOLDER_ID=

# Article Filtering
RELEVANCE_THRESHOLD=1
MAX_ARTICLES_IN_REPORT=40
MIN_IMPACT_SCORE=10.0

# Browser Configuration
USE_SELENIUM=True
SELENIUM_HEADLESS=True

# Skip robots.txt check (for personal/research use)
SKIP_ROBOTS_CHECK=True
